# Storefront Backend Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=3001
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shoobu_storefront
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT
JWT_SECRET=change_this_to_a_random_secret_in_production
JWT_EXPIRY=7d

# Email Service (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# Dashboard API Integration
DASHBOARD_API_URL=http://localhost:5000
DASHBOARD_API_SECRET=your_dashboard_secret_here

# OTP Settings
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=7

# Session
SESSION_SECRET=change_this_to_a_random_secret_in_production
SESSION_TIMEOUT_MINUTES=30

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5000

# Logging
LOG_LEVEL=info

# Storefront URL
STOREFRONT_URL=http://localhost:3000
